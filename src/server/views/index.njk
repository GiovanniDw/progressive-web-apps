{% extends  'base.njk' %}
{% block  content %}
  {% for maker in makers %}
    <section class="h-section">
      <div class="section-text">
      <h2>{{ maker.name }}
      </h2>
      </div>
      <div class="h-articles">
        {% for data in maker.data %}
          <article class='museum-item' id="{{ data.id }}">
            <img class='museum-item-image' src='{{ data.smallImage }}'  alt='{{data.title}}'/>
            <div class='item-content'>
              <a href='/collection/{{ data.id }}'>
                <h4>{{ data.title }}</h4>
              </a>
            </div>
          </article>
        {% endfor %}
        {{ maker.data.id }}
      </div>
    </section>
  {% endfor %}
{% endblock %}